{
    "author": "Covid19 Misinfo Team",
    "browser_action": {
        "default_title": "Misinfo Checker"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "run_at": "document_idle",
        "js": ["scripts/jquery.js", "scripts/covid19.js","scripts/bootstrap.js"],
        "css": ["assets/styles/covid19.css","assets/styles/bootstrap.min.css"]
    }],
    "description": "Check Facebook for Covid19 related Misinfo",
    "manifest_version": 2,
    "name": "Covid19 Misinfo Tracker",
    "permissions": [
        "<all_urls>",
        "webNavigation",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "cookies",
        "https://*.facebook.com/*"
    ],
    "background":    {
        "scripts": ["scripts/jquery.js","scripts/background.js","scripts/bootstrap.js","scripts/_auto_reload.js"]
    },
    "version": "0.0.1",
    "web_accessible_resources": [
        "scripts/jquery.js",
        "scripts/covid.js",
        "assets/images/like-icon.png",
        "assets/images/dislike-icon.png"
    ]
}
